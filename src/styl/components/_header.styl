.page-header
	position            relative
	width               100%
	min-height          100%
	background-image    url('../img/bg2.jpg')
	background-size     cover
	background-position 50% 50%
	z-index             0
  overflow            auto

	.mobile-logo
		display none

		@media $mobile_breakpoint
			position      relative
      display       block
			width         50px 
			height        50px 
			background    #fff
			border-radius 50%
			text-align    center 
			float         left
			margin-top    25px
			margin-left   10%
			z-index       9

			img 
				width      30px
				margin-top 10px

	.open
    position relative
		display  none
		margin   30px
		float    right 
		z-index  9

		img 
			width 35px

		@media $mobile_breakpoint
			display block

	.content 
		position absolute
		width 75%
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color #fff
		z-index 5

		@media $mobile_breakpoint 
			position relative
			top 0
			left 0
			transform none
			width 80%
			margin 110px auto

		.subtitle 
			margin-top -15px

			@media $mobile_breakpoint 
				margin-top 15px

		.button 
			margin-top 35px
			margin-right 30px

			@media $mobile_breakpoint 
				margin-top 15px
				
	.filter
		position absolute
		width 100%
		min-height 100%
		top 0
		background-image: linear-gradient(80deg,#47AEFF,#7299D3,#8772d3,#7B67C3)
		opacity .9
		z-index 1