.input
	width 100%
	float left
	margin-top 30px
	
	.label
		position relative
		color #fff
		font-weight 700
		font-size 18px
		top 30px
		transition all .4s

		&.show 
			top 10px
		
	input 
		width 98%
		position relative
		display block
		background transparent
		border 0
		border-bottom 4px solid #fff
		font-size 16px
		color #fff
		transition all .4s	
		padding-bottom 1px

.select
	width 100%
	float left
	margin-top 50px
	
	select 
		width 100%
		position relative
		display block
		background transparent
		border 0
		border-bottom 4px solid #fff
		font-size 16px
		font-weight 500
		color #fff
		transition all .4s	
		padding-bottom 5px
		margin-top 10px
		
		option
			color #999
		&.lg
			height 40px
			
		&:focus
			outline none
		
	.label
		position relative
		color #fff
		font-weight 700
		font-size 18px
		transition all .4s
	
