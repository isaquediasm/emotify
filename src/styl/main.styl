/*  Syntax Quick Reference for Jeet
	--------------------------
	column(ratios = 1, offset = 0, cycle = 0, uncycle = 0, gutter = jeet.gutter)
	span(ratio = 1, offset = 0)
	shift(ratios = 0, col_or_span = column, gutter = jeet.gutter)
	unshift()
	edit()
	center(max_width = 1410px, pad = 0)
	stack(pad = 0, align = false)
	unstack()
	align(direction = both)
	cf()

	For more info see:
		Kouto Swiss Doc: http://kouto-swiss.io/
		Jeet Doc: http://jeet.gs

	And of course, look in node_modules for axis-css and jeet
*/
@import "kouto-swiss"
@import "jeet"
normalize()
@import '_mixins.styl'
@import '_variables.styl'

body, html 
	font-family 'Raleway', sans-serif;
	height 100%

a 
	color inherit 
	text-decoration none 

*:focus 
	outline none

h1.title 
	font-size 70px
	font-weight 700

	@media $mobile_breakpoint
		font-size 35px

h2.title 
	font-size 50px
	font-weight 700


h3.subtitle 
	font-size 28px 
	font-weight 300 

	@media $mobile_breakpoint
		font-size 20px
	
.page-header
	position   relative
	width      100%
	min-height     100%
	overflow auto
	background-image url('../img/bg2.jpg')
	background-size cover
	background-position 50% 50%
	z-index 0

	.mobile-logo
		display none

		@media $mobile_breakpoint
			display block
			position relative 
			width 50px 
			height 50px 
			background #fff
			border-radius 50%
			text-align center 
			float left
			margin-top 25px
			margin-left 10%
			z-index 9

			img 
				width 30px
				margin-top 10px

	.open
		display none
		position relative
		margin 30px
		float right 
		z-index 9

		img 
			width 35px

		@media $mobile_breakpoint
			display block

	.content 
		position absolute
		width 75%
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color #fff
		z-index 5

		@media $mobile_breakpoint 
			position relative
			top 0
			left 0
			transform none
			width 80%
			margin 110px auto

		.subtitle 
			margin-top -15px

			@media $mobile_breakpoint 
				margin-top 15px

		.button 
			margin-top 35px
			margin-right 30px

			@media $mobile_breakpoint 
				margin-top 15px

	.filter
		position absolute
		width 100%
		min-height 100%
		top 0
		opacity .9
		z-index 1
		bg-gradient()


@import 'components/_button.styl'
@import 'components/_menu.styl'
@import 'components/_stats.styl'
@import 'components/_product.styl'
@import 'components/_subscribe.styl'
@import 'components/_input.styl'